<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MD3SQLite.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MD3SQLite"
    xmlns:Views="clr-namespace:MD3SQLite.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="MD3SQLite">

    <ShellContent
        Title="Main Page"
        ContentTemplate="{DataTemplate Views:MainPage}" 
        Route="MainPage"/>

    <ShellContent
        Title="Student Page"
        ContentTemplate="{DataTemplate Views:StudentPage}" 
        Route="MainPage/StudentPage"/>

    <ShellContent
        Title="Student Detail Page"
        ContentTemplate="{DataTemplate Views:StudentDetailPage}" 
        Route="MainPage/StudentPage/StudentDetailPage"/>

    <ShellContent
        Title="Teacher Page"
        ContentTemplate="{DataTemplate Views:TeacherPage}" 
        Route="MainPage/TeacherPage"/>

    <ShellContent
        Title="Teacher Detail Page"
        ContentTemplate="{DataTemplate Views:TeacherDetailPage}" 
        Route="MainPage/TeacherPage/TeacherDetailPage"/>
</Shell>
